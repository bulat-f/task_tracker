%nav.navbar.navbar-default{role: "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ data: { target: "#bs-example-navbar-collapse-1", toggle: "collapse" }, type: "button" }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Task Tracker", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Projects", projects_path
        %li= link_to "Tasks", tasks_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ data: { toggle: "dropdown" }, href: "#" }
              = t('header.profile.label')
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to t('header.profile.edit'), edit_user_registration_path
              %li.divider
              %li
                = link_to t('header.profile.signout'), destroy_user_session_path, method: :delete

