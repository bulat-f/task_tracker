= form_for project, html: { multipart: true } do |f|
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control', rows: 10
  .form-group
    = f.submit project.new_record? ? 'Create' : 'Update', class: 'btn btn-lg btn-primary'
